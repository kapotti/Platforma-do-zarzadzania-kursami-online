@model KursyOnline.Models.Category

@{
    ViewData["Title"] = "Usuń Kategorię";
}

<h1>Usuń kategorię</h1>

<h3 class="text-danger">Czy na pewno chcesz usunąć tę kategorię?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa kategorii</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń trwale" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>