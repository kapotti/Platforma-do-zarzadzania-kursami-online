@model KursyOnline.Models.Lesson
@{
    ViewData["Title"] = "Szczegóły Lekcji";
}

<h1>Szczegóły lekcji</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Treść</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>
        <dt class="col-sm-2">Wideo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VideoUrl)</dd>
        <dt class="col-sm-2">Kurs</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Course.Title)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edytuj</a> |
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>